{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "target": "es2015",
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "pretty": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "~/*": ["src/*"]
    },
    "declaration": true,
    "esModuleInterop": true,
    "declarationDir": "./types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "sourceMap": true
  },
  "exclude": ["./examples"]
}
